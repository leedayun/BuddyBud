<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/sent_willow_profile_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/sent_willow_id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/sent_willow_profile_img"
        app:layout_constraintTop_toTopOf="@+id/sent_willow_profile_img" />

    <Button
        android:id="@+id/request_cancel_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="168dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#A4A4A4"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="100dp"
        app:layout_constraintStart_toEndOf="@+id/sent_willow_profile_img"
        app:layout_constraintTop_toBottomOf="@+id/sent_willow_id_txt" />

</androidx.constraintlayout.widget.ConstraintLayout>