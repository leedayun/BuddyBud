<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/incoming_profile_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/incoming_id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/incoming_profile_img"
        app:layout_constraintTop_toTopOf="@+id/incoming_profile_img" />

    <Button
        android:id="@+id/request_accept_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="81dp"
        android:layout_height="25dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#BAEEFF"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="Yes"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="100dp"
        app:layout_constraintStart_toEndOf="@+id/incoming_profile_img"
        app:layout_constraintTop_toBottomOf="@+id/incoming_id_txt" />

    <Button
        android:id="@+id/request_reject_btn"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="81dp"
        android:layout_height="25dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:backgroundTint="#A4A4A4"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:padding="0dp"
        android:text="No"
        android:textAllCaps="false"
        android:textSize="16sp"
        app:cornerRadius="100dp"
        app:layout_constraintStart_toEndOf="@+id/request_accept_btn"
        app:layout_constraintTop_toBottomOf="@+id/incoming_id_txt" />

    <TextView
        android:id="@+id/incoming_info_txt"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="5sp"
        android:text="dept\ngender"
        android:textAlignment="textEnd"
        android:textColor="#C4C4C4"
        app:layout_constraintBottom_toBottomOf="@+id/incoming_profile_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/request_reject_btn"
        app:layout_constraintTop_toTopOf="@+id/incoming_profile_img" />
</androidx.constraintlayout.widget.ConstraintLayout>