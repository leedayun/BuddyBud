<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="24dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/willow_profile_img"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:layout_marginStart="32dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/willow_id_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/willow_profile_img"
        app:layout_constraintTop_toTopOf="@+id/willow_profile_img" />

    <TextView
        android:id="@+id/willow_lastmsg_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="12dp"
        android:text="last message"
        android:textColor="#979797"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/willow_profile_img"
        app:layout_constraintStart_toEndOf="@+id/willow_profile_img"
        app:layout_constraintTop_toBottomOf="@+id/willow_id_txt" />

    <TextView
        android:id="@+id/willow_lastmsg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="last message time"
        android:textColor="#979797"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/willow_id_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/willow_id_txt" />
</androidx.constraintlayout.widget.ConstraintLayout>